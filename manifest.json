{
    "name": "Plantronics Hub Notify",
    "version": "0.0.1",
    "manifest_version": 2,
    "description": "Background Extension to Notify of an Incoming PSTN Call",

    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "default_locale": "en",
    "background": {
        "scripts": [
            "js/jquery/jquery.min.js", "src/bg/background.js"
        ],
        "persistent": true
    },
    "permissions": [
        "notifications",
        "background",
        "tabs",
        "http://*/*"
    ],
    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}